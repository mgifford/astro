<script>
	const toggle = () => {
		if(localStorage.darkMode) {
			document.documentElement.dataset.dark = '';
		}
	}

	toggle();
	document.addEventListener('astro:beforeload', () => {
		toggle();
	})
</script>
<style is:global>
	html[data-dark] body {
		background: black;
		color: white;
	}
</style>
